# SOL eMenu - CukCuk Data Synchronization Environment Configuration
# Copy this file to .env and fill in your actual credentials

# =============================================================================
# CukCuk API Configuration
# =============================================================================
# Get these from your CukCuk management portal
# https://cukcuk.vn/articles/index.html

CUKCUK_DOMAIN=sol
CUKCUK_APP_ID=CUKCUKOpenPlatform
CUKCUK_SECRET_KEY=your_cukcuk_secret_key_here
CUKCUK_COMPANY_CODE=sol
CUKCUK_API_BASE_URL=https://graphapi.cukcuk.vn

# =============================================================================
# Directus API Configuration
# =============================================================================
# Get these from your Directus instance
# Navigate to Settings → API & Authentication → Tokens → Create Static Token

DIRECTUS_URL=https://your-directus-instance.com
DIRECTUS_API_TOKEN=your_directus_static_token_here
DIRECTUS_TIMEOUT=30000

# =============================================================================
# Sync Configuration
# =============================================================================

# Enable/disable specific sync types
SYNC_ENABLE_BRANCHES=true
SYNC_ENABLE_CATEGORIES=true
SYNC_ENABLE_MENU_ITEMS=true
SYNC_ENABLE_TABLES=true
SYNC_ENABLE_PROMOTIONS=true
SYNC_ENABLE_ORDERS=true

# Performance settings
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5000
SYNC_BATCH_SIZE=100

# =============================================================================
# Application Settings
# =============================================================================

NODE_ENV=development
LOG_LEVEL=info

# Advanced settings (optional)
ENABLE_PARALLEL_SYNC=false
MAX_CONCURRENT_ITEMS=5
ENABLE_DETAILED_LOGGING=false

# =============================================================================
# Notes
# =============================================================================
# 1. Never commit this file with real credentials to version control
# 2. Keep your .env file secure and never share it publicly
# 3. Use different tokens for development and production environments
# 4. Regularly rotate your API tokens for security
# 5. Test your configuration using: node utils/test-connection.js