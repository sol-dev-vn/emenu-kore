{
	"name": "sol-emenu-hub",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test": "npm run test:unit && npm run test:e2e",
		"test:unit": "vitest",
		"test:unit:watch": "vitest --watch",
		"test:unit:coverage": "vitest --coverage",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:codegen": "playwright codegen",
		"test:performance": "playwright test --project=chromium tests/performance/",
		"test:ci": "npm run test:unit -- --run --coverage && npm run test:e2e",
		"test:watch": "concurrently \"npm run test:unit:watch\" \"npm run test:e2e -- --watch\"",
		"test:report": "playwright show-report",
		"deploy": "./scripts/deploy.sh",
		"deploy:stop": "./scripts/deploy.sh --stop",
		"deploy:restart": "./scripts/deploy.sh --restart",
		"deploy:logs": "./scripts/deploy.sh --logs",
		"deploy:status": "./scripts/deploy.sh --status",
		"monitor": "./scripts/monitor.sh",
		"monitor:health": "./scripts/monitor.sh --health-only",
		"monitor:errors": "./scripts/monitor.sh --errors",
		"monitor:performance": "./scripts/monitor.sh --performance",
		"monitor:resources": "./scripts/monitor.sh --resources",
		"monitor:verbose": "./scripts/monitor.sh --verbose",
		"pm2:start": "pm2 start ecosystem.config.cjs --env production",
		"pm2:stop": "pm2 stop emenu",
		"pm2:restart": "pm2 restart emenu",
		"pm2:logs": "pm2 logs emenu",
		"pm2:status": "pm2 status emenu",
		"pm2:monit": "pm2 monit",
		"pm2:save": "pm2 save",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.0.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@playwright/test": "^1.56.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-netlify": "^5.2.3",
		"@sveltejs/adapter-node": "^5.3.3",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"jsdom": "^27.0.0",
		"mdsvex": "^0.12.3",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.1.9",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@calcom/atoms": "^1.7.1",
		"@directus/sdk": "^20.0.3",
		"@node-rs/argon2": "^2.0.2",
		"@radix-ui/react-accordion": "^1.2.12",
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-navigation-menu": "^1.2.14",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.13",
		"@yudiel/react-qr-scanner": "^2.3.1",
		"bits-ui": "^2.9.6",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"embla-carousel-react": "^8.6.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.17.4",
		"lucide-react": "^0.543.0",
		"lucide-svelte": "^0.543.0",
		"prismjs": "^1.30.0",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.1",
		"remark-html": "^16.0.1",
		"remark-prism": "^1.3.6",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss-animate": "^1.0.7"
	}
}
